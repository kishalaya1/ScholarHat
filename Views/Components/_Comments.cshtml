@model List<ScholarHat.Models.CommentViewModel>
<div>
    <h2>Comments </h2>
<ul>
    @foreach (var comment in Model)
    {
        <li><b> @comment.Id  : @comment.Name  </b></li>
        <li>@comment.Body </li>        
        <li> E-Mail Address : @comment.Email</li>
    }
</ul>
</div>